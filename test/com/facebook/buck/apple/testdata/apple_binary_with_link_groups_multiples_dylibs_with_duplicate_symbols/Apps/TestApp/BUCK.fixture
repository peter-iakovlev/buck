apple_binary(
    name = "TestApp",
    srcs = ["main.c"],
    frameworks = [
        "$SDKROOT/System/Library/Frameworks/Foundation.framework",
    ],
    link_group_map = [
        (
            "MATCH_ALL",
            [("//Apps/Libs:C", "node")],
        ),
        (
            "dylib1",
            [("//Apps/Libs:B", "tree")],
        ),
        (
            "dylib2",
            [("//Apps/Libs:A", "tree")],
        ),
    ],
    deps = [
        ":Dylib1",
        ":Dylib2",
        "//Apps/Libs:A",
    ],
)

